# Backend environment example
# Copy this file to `.env` and fill in real values before running the backend.

# Server
PORT=3000
NODE_ENV=development

# AWS / DynamoDB (set credentials or use local DynamoDB endpoint)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
# When using local DynamoDB (e.g. DynamoDB Local), set DYNAMODB_ENDPOINT to the local URL
DYNAMODB_ENDPOINT=http://localhost:8000

# Application-specific
SALES_TABLE_NAME=SalesTable
